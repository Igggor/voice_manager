<div class="main-page">
    <div class="interactive-cards-container">
        <div class="actions interactive-cards">
            <h2>Действия</h2>
            <div class="devise-list">
                <div class="device">
                    <img src="/static/images/devices_logo/logo.png" alt="">
                    <p>Светодиод</p>
                </div>
            </div>
        </div>
        <div class="active-device interactive-cards">
            <h2>Активные устройства</h2>
            <div class="devise-list">
                <div class="device">
                    <img src="/static/images/devices_logo/logo.png" alt="">
                    <p>Светодиод</p>
                </div>
                <div class="device">
                    <img src="/static/images/devices_logo/logo.png" alt="">
                    <p>Лампочка1</p>
                </div>
                <div class="device">
                    <img src="/static/images/devices_logo/logo.png" alt="">
