                </div>
                <div class="device">
                    <img src="/static/images/devices_logo/logo.png" alt="">
                    <p>Лампочка3</p>
                </div>
                <div class="device">
                    <img src="/static/images/devices_logo/logo.png" alt="">
                    <p>Лампочка4</p>
                </div>
            </div>
        </div>
    </div>
    <div class="logs interactive-cards">
        <h2>История действий</h2>
        <div class="log-list-container">
            {{#each logList}}
                <p><i>{{this.createdAt}} - </i><span class="{{#if this.error}}error{{/if}}">{{this.text}}</span></p>
            {{/each}}
        </div>
    </div>
<!--    <img class="ai-animation" src="/static/images/animation/assistant-ezgif.com-cut.gif" alt="">-->
</div>
<script>
    let logContainer = document.querySelector('.log-list-container')
    logContainer.scrollTo(0, logContainer.scrollHeight)
</script>